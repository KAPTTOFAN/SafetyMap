{
  "name": "ContactSubmission",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Contact name"
    },
    "email": {
      "type": "string",
      "description": "Contact email"
    },
    "organization": {
      "type": "string",
      "description": "Organization name"
    },
    "inquiry_type": {
      "type": "string",
      "enum": [
        "business",
        "tourism",
        "government",
        "general"
      ],
      "description": "Type of inquiry"
    },
    "message": {
      "type": "string",
      "description": "Message content"
    }
  },
  "required": [
    "name",
    "email",
    "message"
  ]
}
